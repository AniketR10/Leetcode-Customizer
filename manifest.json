{
  "manifest_version": 3,
  "name": "LeetCode Font Changer (All Fonts)",
  "version": "1.1",
  "description": "Pick any system or Google font and force it across LeetCode (UI + code).",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.leetcode.com/*"],
  "action": { "default_popup": "popup.html", "default_title": "Font Changer" },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/*","https://fonts.google.com/*", "https://www.googleapis.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
